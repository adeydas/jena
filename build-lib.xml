<project xmlns:ivy="antlib:org.apache.ivy.ant" name="lib">
  <!-- Library of standard tasks -->

  <!-- Assumed property settings:
  -->

  <!-- Ivy -->

  <!-- Basic processes -->

  <macrodef name="compile-java">
    <attribute name="src-ref"/> <!-- default="DFT" -->
    <sequential>
     <mkdir dir="${build.classes.dir}"/>
     <javac destdir="${build.classes.dir}"
	    debug="${java.debug}"
	    deprecation="${java.debuglevel}"
	    optimize="${java.optimize}"
	    encoding="${java.encoding}"
	    source="${java.source}"
	    target="${java.target}"
	    >
      <src refid="@{src-ref}"/>
      <classpath refid="java.build.class.path" />
     </javac>
    </sequential>
  </macrodef>

  <macrodef name="create-jar">
    <attribute name="jar-file"/>
    <attribute name="classes"/>
    <sequential>
      <delete file="@{jar-file}"/>
      <jar destfile="@{jar-file}" basedir="@{classes}">
	<!--
	  <manifest>
	  <attribute name="Main-Class" value="${main.class}"/>
	  </manifest>
	-->
      </jar>
    </sequential>
  </macrodef>

</project>