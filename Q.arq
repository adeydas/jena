#PREFIX fn: <http://www.w3.org/2005/xpath-functions#>
PREFIX list: <http://jena.hpl.hp.com/ARQ/list#>
PREFIX  :        <http://example/>

SELECT *
WHERE {
    ?x ^:p* ?y

    { ?x ^:p^:q^:r ?y }
UNION
    { ?x ^:p/^:q/^:r ?y }
UNION
   { ?x ^:p/^:q*/^:r ?y }
UNION
    { ?x ^:p/^(:q*)/^:r ?y }
}
