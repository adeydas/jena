PREFIX pjc:     <http://example/ns#>
PREFIX tops:     <http://example/tops#>
PREFIX  rdfs:   <http://www.w3.org/2000/01/rdf-schema#>
PREFIX  xsd:    <http://www.w3.org/2001/XMLSchema#>
PREFIX  owl:    <http://www.w3.org/2002/07/owl#>


SELECT *
{
   ?c pjc:excludeProperty ?p .
   ?c rdfs:subClassOf ?r .
   ?r a owl:Restriction .
   ?r owl:onProperty ?p .
   LET (?restriction := ?r) .
   ( ?subject ?predicate ?object ) tops:dependsOn ?restriction .
}
