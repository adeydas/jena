<ivysettings>
  <property name="sftp.root.dev" value="repo-dev/com/hp/hpl/jena" override="false"/>
  <property name="sftp.root.main" value="repo/com/hp/hpl/jena" override="false"/>

  <!--
  <include file="${ivy.settings.dir}/ivy-resolvers.xml" />
  -->
  <!-- IvyDE gets confused -->
  <resolvers>
    <chain name="resolver-chain">
      <!-- Jena development repository : not sync'ed with maven central -->
      <ibiblio name="jena-dev" root="http://openjena.org/repo-dev" 
	       m2compatible="true" />

      <!-- Jena publish repository, sync'ed to maven central -->
      <ibiblio name="jena" root="http://openjena.org/repo" m2compatible="true"/>

      <ibiblio name="maven2" m2compatible="true" />
    </chain>
  </resolvers>

  <resolvers>
    <!-- Where to publish to -->
    <!-- File system - for testing - can publish wrong bytes! -->
    <filesystem name="repo-local" >
       <ivy      pattern="${pub.dir.local}/[module]-[revision]/ivy.xml"/>
       <artifact pattern="${pub.dir.local}/[module]-[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
    </filesystem>

    <!-- User environment variables to find user/key -->
    <sftp name="repo-main" host="openjena.org" 
	  user="${ivy.user}" keyFile="${ivy.keyfile}">
      <ivy      pattern="${sftp.root.main}/[module]/[revision]/ivy.xml"/>
      <artifact pattern="${sftp.root.main}/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
    </sftp>

    <!-- User environment variables to find user/key -->
    <sftp name="repo-dev" host="openjena.org" 
	  user="${ivy.user}" keyFile="${ivy.keyfile}">
      <ivy      pattern="${sftp.root.dev}/[module]/[revision]/ivy.xml"/>
      <artifact pattern="${sftp.root.dev}/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
    </sftp>
  </resolvers>

  <settings defaultResolver="resolver-chain"/>

  <!--
  <include url="${ivy.default.settings.dir}/ivysettings-public.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-shared.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-local.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-main-chain.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-default-chain.xml"/>
  -->
</ivysettings>
