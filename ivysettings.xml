<ivysettings>
  <properties file="${ivy.settings.dir}/ivysettings-file.properties" />

  <settings defaultResolver="resolver-chain"/>

  <resolvers>

    <chain name="resolver-chain" returnFirst="true">
      <!-- Jena development repository : not sync'ed with maven central -->
      <!-- <ibiblio name="jena-dev" root="http://jena.hpl.hp.com/repo-dev" m2compatible="true"/> -->

      <!-- Jena publish repository, sync to maven central : onmly needed if the sync has not happened -->
      <ibiblio name="jena" root="http://jena.hpl.hp.com/repo" m2compatible="true"/>

      <ibiblio name="ibiblio" m2compatible="true" />
    </chain>
    
    <!-- Publish -->
    <!-- File system - for testing
    <filesystem name="dev-resolver" >
       <ivy      pattern="build/pub/[module]-[revision]/[artifact]-[revision].[ext]"/>
       <artifact pattern="build/pub/[module]-[revision]/[artifact]-[revision].[ext]"/>
    </filesystem>
    -->

    <!-- User environment variables to find user/key -->
    <sftp name="dev-publish" host="jena.hpl.hp.com" 
	  user="${env.USER}" keyFile="${env.HOME}/.ssh/ivy-pub-jena-key">
      <ivy pattern="repo-dev/com/hp/hpl/jena/[module]/[revision]/ivy.xml"/>
      <artifact pattern="repo-dev/com/hp/hpl/jena/[module]/[revision]/[artifact]-[revision].[ext]"/>
    </sftp>

  </resolvers>
  <include url="${ivy.default.settings.dir}/ivysettings-public.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-shared.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-local.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-main-chain.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-default-chain.xml"/>
</ivysettings>
