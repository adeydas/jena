<!-- The ARQ distibution -->

<assembly>
  <!--<id>dist</id> Makes the name VER.zip -->
  <baseDirectory>ARQ-${project.version}</baseDirectory>
  <formats>
    <!--
    <format>tar.gz</format>
    <format>tar.bz2</format>
    -->
    <format>zip</format>
  </formats>

  <fileSets>

    <fileSet>
      <includes>
        <include>Copyright.txt</include>
        <include>README*</include>
        <include>ChangeLog.txt</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>

    <!-- lib/ -->
    <fileSet>
      <directory>lib</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>arq*.jar</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>${this.root}.jar</include>
        <include>${this.root}-tests.jar</include>
      </includes>
    </fileSet>

    <!-- Put sources at the top level -->
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>${this.root}-sources.jar</include>
        <include>${this.root}-test-sources.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>bin</directory>
    </fileSet>

    <fileSet>
      <directory>bat</directory>
    </fileSet>

    <!-- For testing the deployment -->
    <fileSet>
      <directory>testing</directory>
    </fileSet>

    <fileSet>
      <includes>
	<include>test.sh</include>
      </includes>
    </fileSet>

    <!-- The javadoc had to be unpacked into the doc/ area
	 so will be picked up here.
    -->
    
    <fileSet>
      <directory>doc</directory>
      <excludes>
        <exclude>linkcheck</exclude>
        <exclude>template.html</exclude>
        <exclude>**/_*/**</exclude>
        <exclude>**/desktop.ini</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>src-examples</directory>
    </fileSet>

    <fileSet>
      <directory>etc</directory>
    </fileSet>

    <fileSet>
      <directory>Vocabularies</directory>
    </fileSet>

  </fileSets>
  
</assembly>
