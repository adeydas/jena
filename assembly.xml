<assembly>
  <baseDirectory>ARQ-${project.version}</baseDirectory>
  <formats>
    <!--
    <format>tar.gz</format>
    <format>tar.bz2</format>
    -->
    <format>zip</format>
  </formats>
<!--
   What prioperties available?
testing?
Vocabularies
Grammars
doc
  excludes
  how to produce javadoc
src-examples

-->

  <fileSets>

    <fileSet>
      <includes>
        <include>Copyright.txt</include>
        <include>README*</include>
        <include>ChangeLog.txt</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>arq*.jar</include>
      </includes>
    </fileSet>
    
    <fileSet>
      <directory>lib</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>arq*.jar</exclude>
      </excludes>
    </fileSet>


    <fileSet>
      <directory>bin</directory>
    </fileSet>

    <fileSet>
      <directory>bat</directory>
    </fileSet>

    <!-- TODO -->
    <fileSet>
      <directory>doc</directory>
      <excludes>
	<exclude>linkcheck</exclude>
	<exclude>template.html</exclude>
        <exclude>**/_*/**</exclude>
        <exclude>**/desktop.ini</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>src</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>

    <fileSet>
      <directory>src-examples</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>

    <fileSet>
      <directory>etc</directory>
    </fileSet>

    <fileSet>
      <directory>Vocabularies</directory>
    </fileSet>

  </fileSets>

</assembly>
