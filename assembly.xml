<assembly>
  <id>dist</id>
  <baseDirectory>SDB-${project.version}</baseDirectory>
  <formats>
    <!--
    <format>tar.gz</format>
    <format>tar.bz2</format>
    -->
    <format>zip</format>
  </formats>

  <fileSets>

    <fileSet>
      <includes>
        <include>Copyright.txt</include>
        <include>README*</include>
        <include>ChangeLog.txt</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>

    <!-- lib/ -->
    <fileSet>
      <directory>lib</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>sdb*.jar</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>sdb-${project.version}.jar</include>
        <include>sdb-${project.version}-tests.jar</include>
      </includes>
    </fileSet>

    <!-- But put sources and javadoc at the top level -->
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>sdb-${project.version}-sources.jar</include>
        <include>sdb-${project.version}-javadoc.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>bin</directory>
    </fileSet>

    <fileSet>
      <directory>bat</directory>
    </fileSet>

    <!-- For testing the deployment -->
    <fileSet>
      <directory>testing</directory>
    </fileSet>

    <fileSet>
      <includes>
	<include>test.sh</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>doc</directory>
      <excludes>
        <exclude>linkcheck</exclude>
        <exclude>template.html</exclude>
        <exclude>**/_*/**</exclude>
        <exclude>**/desktop.ini</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>src</directory>
    </fileSet>

    <fileSet>
      <directory>src-examples</directory>
    </fileSet>

    <fileSet>
      <directory>etc</directory>
    </fileSet>

    <fileSet>
      <directory>Vocabularies</directory>
    </fileSet>

  </fileSets>

</assembly>
