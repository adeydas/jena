  <!-- Modules set scm -->

  <properties>
    <!-- Versions of Jena modules -->
    <ver.jena>2.6.4</ver.jena>
    <ver.arq>2.8.9-incubating-SNAPSHOT</ver.arq>
    <ver.tdb>0.8.11-incubating-SNAPSHOT</ver.tdb>
    <ver.sdb>1.3.4-incubating-SNAPSHOT</ver.sdb>

    <!-- Versions of other things -->
    <!--
    <ver.http-client>4.1.2</ver.http-client>
    <ver.commons-fileupload>1.2.2</ver.commons-fileupload>
    -->
    <ver.junit>4.9</ver.junit>
    <ver.icu4j>3.4.4</ver.icu4j>
    <ver.slf4j>1.6.1</ver.slf4j>
    <ver.log4j>1.2.16</ver.log4j>

    <!-- Other properties -->
    <jdk.version>1.6</jdk.version>
    <targetJdk>${jdk.version}</targetJdk> <!-- MPMD-86 workaround -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

  </properties>

  <!-- General dependencies for all systems -->

  <dependencies>
    <dependency>
       <groupId>com.hp.hpl.jena</groupId>
       <artifactId>iri</artifactId>
       <version>0.8</version>
    </dependency>

     <dependency>
       <groupId>com.ibm.icu</groupId>
       <artifactId>icu4j</artifactId>
       <version>3.4.4</version>
     </dependency>

     <dependency>
       <groupId>xerces</groupId>
       <artifactId>xercesImpl</artifactId>
       <version>2.7.1</version>
     </dependency>

     <dependency>
       <groupId>junit</groupId>
       <artifactId>junit</artifactId>
       <version>${ver.junit}</version>
       <scope>test</scope>
     </dependency>

     <!--
     <dependency>
       <groupId>org.apache.httpcomponents</groupId>
       <artifactId>httpclient</artifactId>
       <version>${ver.http-client}</version>
       <exclusions>
	 <!- - Replace with slf4j adapter - ->
