<project xmlns:ivy="antlib:org.apache.ivy.ant" name="build-lifecycle">

  <!--
    Lifecycle defintions:
    clean
    build
http://www.sonatype.com/books/maven-book/reference/simple-project-sect-lifecycle.html
  -->


  <!-- ======== Clean ======== -->
  <target name="clean" depends="clean-build"/>

  <!-- ======== Build ======== -->
  <!-- The "build" lifecycle has the following steps:
     prepare-sources
     prepare-resources
     compile
     test
     jar
     package                Build the artifacts
     artifacts
     deploy
  -->
  
  <target name="build" 
	  depends="prepare-sources,prepare-resources,compile,test,jar"/>

  
  <target name="prepare-sources" />
  <target name="prepare-resources" />
  <target name="compile" />
  <target name="test" />
  <target name="jar" />

  <!-- ======== Release ======== -->

  <target name="release"
	  depends="build,artifacts,publish"/>

  <target name="artifacts" />
  <target name="publish" />

  

</project>